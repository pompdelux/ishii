<script type="text/javascript" src="{{ base_url }}fx/js/vendor/modernizr-2.6.2.min.js"></script>
</head>
<body>

<div id="container">
  <header>
    <h1>{{ page.title }}</h1>
  </header>
  <nav>
    {% block navigation %}{% endblock %}
  </nav>
  <div id="main">
    {% block content %}{% endblock %}
  </div>
</div>

<div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    // init the FB JS SDK
    FB.init({
      appId      : '{{ facebook_apps.default.app_id }}', // App ID from the App Dashboard
      channelUrl : '{{ base_url }}channel.html', // Channel File for x-domain communication
      status     : true, // check the login status upon init?
      cookie     : true, // set sessions cookies to allow your server to access the session?
      xfbml      : true  // parse XFBML tags on this page?
    });

    // Additional initialization code such as adding Event Listeners goes here

  };

  // Load the SDK's source Asynchronously
  (function(d){
     var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement('script'); js.id = id; js.async = true;
     js.src = "//connect.facebook.net/en_US/all.js";
     ref.parentNode.insertBefore(js, ref);
   }(document));
</script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="{{ base_url }}fx/js/vendor/jquery-1.8.2.min.js"><\/script>')</script>


