<!--[if gt IE 8]><!--> <html class="no-js" lang="{{ app.locale }}" xmlns:og="http://ogp.me/ns#" xmlns:fb="http://ogp.me/ns/fb#"> <!--<![endif]-->
<head>
<title>{{ page.browser_title|default('Admin') }} {{ app.translator.trans('default.browser.title') }}</title>

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<meta name="robots" content="all">

<link rel="dns-prefetch" href="{{ cdn_url|replace({'http:':''}) }}">
<link rel="dns-prefetch" href="//cdn.jquerytools.org">
<link rel="dns-prefetch" href="//html5shim.googlecode.com">
<link rel="dns-prefetch" href="//fonts.googleapis.com">

<link href="//fonts.googleapis.com/css?family=Merriweather:400,700,900" rel="stylesheet" type="text/css">

<link rel="stylesheet" href="{{ base_url }}fx/css/normalize.css">
<link rel="stylesheet" href="{{ base_url }}fx/css/main.css">
<link rel="stylesheet" href="{{ base_url }}fx/css/skeleton.css">

<script type="text/javascript" src="{{ base_url }}fx/js/vendor/modernizr-2.6.2.min.js"></script>
</head>
<body>

<div class="container">

  <header class="sixteen columns alpha omega">
    <h1>{{ page.title }}</h1>
  </header>
  <nav class="sixteen columns alpha omega">
    {% block navigation %}
      <ul>
        <li><a href="{{ url('admin_galleries') }}">{{ app.translator.trans('admin.gallery.button.galleries') }}</a></li>
        <li><a href="{{ url('admin_gallery_add') }}">{{ app.translator.trans('admin.gallery.button.add.gallery') }}</a></li>
      </ul>
    {% endblock %}
  </nav>
  {% block flash %}
    <div id="alerts" class="sixteen columns alpha omega">
      {% if flash is defined %}
        {% for message in flash %}
          <div class="alert alert-{{ message.type }}">
            <div class="container">
              <p><strong>{{ message.short }}</strong> {{ message.ext }}</p>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  {% endblock flash %}
  <div id="main" class="sixteen columns alpha omega">
    {% block content %}{% endblock %}
  </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="{{ base_url }}fx/js/vendor/jquery-1.8.2.min.js"><\/script>')</script>


<script>
var base_url = '{{ base_url }}';
var cdn_url = '{{ cdn_url }}';
</script>
<script src="{{ base_url }}fx/js/main.js"></script>
<script src="{{ base_url }}fx/js/admin.js"></script>
<script src="{{ base_url }}fx/js/plugins.js"></script>

</body>
</html>
